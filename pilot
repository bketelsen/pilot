before_hook() {
  # pull in os/distro variables
  . /etc/os-release

  if ! command -v gum 2>&1 >/dev/null; then
      header "Required Libraries Missing" "Installing Required Library"
      install gum
  fi

}

initialize() {
  declare -g version="0.0.1"
  set -e

}

run() {

  declare -g long_usage=''
  declare -g -A args=()
  declare -g -A deps=()
  declare -g -a env_var_names=()
  declare -g -a input=()

  normalize_input "$@"
  parse_requirements "${input[@]}"
  before_hook

  case "$action" in
    "intune") pilot_intune_command ;;
    "docker") pilot_docker_command ;;
    "test") pilot_test_command ;;
    "incus") pilot_incus_command ;;
    "azcli") pilot_azcli_command ;;
    "enhancedmode") pilot_enhancedmode_command ;;
  esac
}

initialize
run "$@"
